<h2>
  <%= @course.name %>
</h2>

<div>
<%= link_to 'edit', edit_course_path(@course) %>
<%= link_to 'delete', @course, method: :delete %>
<%= link_to 'Add student', add_student_path %>
</div>


<% if @students.any? %>
<h3> Enrolled students </h3>
  <table>
    <% @students.each do |s| %>
     <tr> 
        <td> <%= link_to s.full_name, student_path(s) %> </td>
        <td> <%= link_to 'remove', delete_enrollment_path(student_id: s.id, course_id: @course.id)%>
    <% end %>
  </ul>
<% else %>
<h3> No enrolled students </h3>
<% end %>

  


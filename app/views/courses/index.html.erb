<br>
<table>
  <thead>
    <tr>
      <th><h2>Course name</h2></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><strong><%= course.course_name %></strong></td>
      
        
        <td><%= button_to 'Details', course, class: "button", :method => :get %></td>
        <td><%= button_to 'Edit', edit_course_path(course),class: "button", :method => "get" %></td>
        <td><%= button_to 'Delete', course, class: "button", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>


    <% end %>
  </tbody>
</table>


<%= button_to 'Add New Course', new_course_path, :class => "button", :method => :get %>
<%= button_to 'Back to students', students_path, class: "button", :method => :get %>

<h1>The List of Students</h1>
<br>
<%= link_to 'ADD Student', new_student_path %>
<br>
<br>

<%= will_paginate %>


<table border="2">
  <thead>
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.last_name %></td>
        <td><%= student.first_name %></td>
        <td><%= student.birth_date %></td>
      
        <td><%= link_to 'Update', edit_student_path(student) %></td>
        <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>

<%= will_paginate %>
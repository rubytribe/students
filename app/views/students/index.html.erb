<h1 style="color:#06185c">Listing students</h1>

<table>
  <thead>
    <tr>
      <th class="fancy">First name</th>
      <th class = "fancy">Last name</th>
      <th class = "fancy">Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td class="studs"><%= student.first_name %></td>
        <td class="studs"><%= student.last_name %></td>
        <td class="studs"><%= student.birthday %></td>
        <td class="links"><%= link_to 'Show', student %></td>
        <td class="links"><%= link_to 'Edit', edit_student_path(student) %></td>
        <td class="links"><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<h1>Listing students</h1>

<table>
  <thead>
    <tr>
      <th><h2>First name -</h2></th>
      <th><h2>Last name -</h2></th>
      <th><h2>Birthday</h2></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><strong><%= student.first_name %></strong></td>
        <td><strong><%= student.last_name %></strong></td>
        <td><%= student.bdate %></td>
        <td><%= button_to 'Details', student, class: "button", :method => :get %></td>
        <td><%= button_to 'Edit', edit_student_path(student),class: "button", :method => "get" %></td>
        <td><%= button_to 'Delete', student, class: "button", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= button_to 'Add New Student', new_student_path, :class => "button",  :method => :get  %>
<%= button_to 'Courses', courses_path, class: "button", :method => :get %>

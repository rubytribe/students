<%= form_for @student do |f| %>
  <%= f.label "First name" %>
  <%= f.text_field :first_name %>

  <%= f.label "Last name" %>
  <%= f.text_field :last_name %>
  
  <%= f.label "Birth date" %>
  <%= f.date_select :birth_date, start_year: 1900, order: [:day, :month, :year] %>
  
  <%= f.submit %>
  
<% end %>
